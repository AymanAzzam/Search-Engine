<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/results_background"
    android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view"
        android:layout_above="@id/arrows"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/arrows">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_left"
            android:id="@+id/arrow_left"
            android:padding="16dp"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"
            android:id="@+id/arrow_right"
            android:padding="16dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:id="@+id/first_number"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="1"
            android:layout_toLeftOf="@id/second_number"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/second_number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:id="@+id/second_number"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:id="@+id/third_number"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/second_number"
            android:layout_toEndOf="@id/second_number" />
    </RelativeLayout>

</RelativeLayout>